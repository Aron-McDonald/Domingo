@model IEnumerable<DomingoApp.Models.EmployeeModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employees</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new Employee</a>
</p>

@*For the display of the employee info*@

<table class="table table-hover">
    <thead>
        <tr>
            <th>Employee Number</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => emp.employeeNo)</td>
            <td>@Html.DisplayFor(modelItem => emp.employeeName)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.employeeNo" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@emp.employeeNo" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@emp.employeeNo" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>