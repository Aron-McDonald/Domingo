@model IEnumerable<DomingoApp.Models.CustomerModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Customer</a>
</p>

@*For the display of the employee info*@

<table class="table table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cust in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => cust.customerID)</td>
            <td>@Html.DisplayFor(modelItem => cust.name)</td>
            <td>@Html.DisplayFor(modelItem => cust.address)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@cust.customerID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@cust.customerID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>