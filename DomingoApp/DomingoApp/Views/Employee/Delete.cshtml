@model DomingoApp.Models.EmployeeModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Delete Employee</h2>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">

                    <ul>
                        <li><label style="font-weight: bold">Employee Number: </label> @Html.DisplayFor(model => model.employeeNo)</li>
                        <li><label style="font-weight: bold">Employee Name: </label>  @Html.DisplayFor(model => model.employeeName)</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="employeeNo"/>

                        <div>
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-warning">Cancel</a>
                        </div>
                    </form>

                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>
</div>